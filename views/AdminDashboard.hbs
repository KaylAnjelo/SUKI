<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Dashboard</title>
    <link rel="stylesheet" href="/css/StoreOwnerStyles.css">
    <script src="/js/logout.js" defer></script>
    <script src="/js/sidebar.js" defer></script>
    <link rel="icon" type="image/png" href="/assets/SUKI Logo 2.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle sidebar">
                <i class="fas fa-bars"></i>
            </button>
            <div class="logo">Store Panel</div>
            <nav class="nav">
                <a href="/store/dashboard" class="nav-item active">
                    <i class="fas fa-chart-line"></i><span class="label">Dashboard</span>
                </a>
                <a href="/store/rewards" class="nav-item">
                    <i class="fas fa-gift"></i><span class="label">Rewards</span>
                </a>
                <a href="/store/transactions" class="nav-item">
                    <i class="fas fa-receipt"></i><span class="label">Transactions</span>
                </a>
                <a href="/store/customers" class="nav-item">
                    <i class="fas fa-users"></i><span class="label">Customers</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="header">
                <div class="header-left">
                    <h1>Dashboard</h1>
                </div>
                <div class="header-right">
                    <div class="user-profile">
                        <div class="profile-pic">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="profile-info">
                            <span class="user-name">{{user.username}}</span>
                        </div>
                    </div>
                    <form id="logoutForm" action="/logout" method="POST">
                        <button type="submit" class="logout">Log out</button>
                    </form>
                </div>
            </div>

            <!-- Metrics -->
            <div class="metrics-row-1">
                <div class="metric-card">
                    <i class="fas fa-users"></i>
                    <h3>Total Customers</h3>
                    <div class="metric-value">{{store_total_customers}}</div>
                </div>

                <div class="metric-card">
                    <i class="fas fa-coins"></i>
                    <h3>Points Issued</h3>
                    <div class="metric-value">{{store_total_points}}</div>
                </div>

                <div class="metric-card">
                    <i class="fas fa-gift"></i>
                    <h3>Points Redeemed</h3>
                    <div class="metric-value">{{store_rewards_redeemed}}</div>
                </div>

                <div class="metric-card">
                    <i class="fas fa-tags"></i>
                    <h3>Active Rewards</h3>
                    <div class="metric-value">{{store_active_rewards}}</div>
                </div>
            </div>

            <!-- Charts -->
            <div class="charts-row">
                <div class="chart-card">
                    <div class="chart-header">
                        <h3>Reward Redemption Stats</h3>
                    </div>
                    <canvas id="rewardStatsChart"></canvas>
                </div>

                <div class="chart-card">
                    <div class="chart-header">
                        <h3>Points Earned Over Time</h3>
                    </div>
                    <canvas id="storePointsChart"></canvas>
                </div>
            </div>

            <!-- Tables Section -->
            <div class="tables-section">
                <!-- Recent Transactions -->
                <div class="table-container">
                    <h2>Recent Transactions</h2>
                    <div class="table-scroll">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Customer</th>
                                    <th>Points Earned</th>
                                    <th>Points Redeemed</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{{storeTransactionTableRows}}}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Reward Inventory -->
                <div class="table-container">
                    <h2>Reward Inventory</h2>
                    <div class="table-scroll">
                        <table>
                            <thead>
                                <tr>
                                    <th>Reward</th>
                                    <th>Points Required</th>
                                    <th>Stock</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{{rewardTableRows}}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- ChartJS Scripts -->
    <script>
        const rewardLabels = {{#if rewardLabels}}{{{rewardLabels}}}{{else}}[]{{/if}};
        const rewardRedemptionData = {{#if rewardRedemptionData}}{{{rewardRedemptionData}}}{{else}}[]{{/if}};
        const pointsEarnedDates = {{#if pointsEarnedDates}}{{{pointsEarnedDates}}}{{else}}[]{{/if}};
        const pointsEarnedValues = {{#if pointsEarnedValues}}{{{pointsEarnedValues}}}{{else}}[]{{/if}};

        // Reward Donut Chart
        const rewardCtx = document.getElementById('rewardStatsChart').getContext('2d');
        new Chart(rewardCtx, {
            type: 'doughnut',
            data: {
                labels: rewardLabels,
                datasets: [{
                    data: rewardRedemptionData,
                    backgroundColor: ['#7D0006', '#C72C41', '#F8C471', '#27AE60'],
                    borderWidth: 0,
                    cutout: '70%'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Points Earned Bar Chart
        const pointsCtx = document.getElementById('storePointsChart').getContext('2d');
        new Chart(pointsCtx, {
            type: 'bar',
            data: {
                labels: pointsEarnedDates,
                datasets: [{
                    label: 'Points Earned',
                    data: pointsEarnedValues,
                    backgroundColor: '#C72C41',
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
</body>
</html>