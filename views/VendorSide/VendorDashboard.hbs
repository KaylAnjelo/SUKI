<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vendor Dashboard</title>
  <link rel="stylesheet" href="/css/AdminStyles.css">
  <script src="/js/logout.js" defer></script>
  <script src="/js/sidebar.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="icon" type="image/png" href="/assets/SUKI Logo 2.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <button id="sidebarToggle" class="sidebar-toggle"><i class="fas fa-bars"></i></button>
      <div class="logo">SUKI Vendor</div>
      <nav class="nav">
        <a href="/vendor/dashboard" class="nav-item active">
          <i class="fas fa-chart-line"></i><span class="label">Dashboard</span>
        </a>
        <a href="/vendor/products" class="nav-item">
          <i class="fas fa-box"></i><span class="label">Products</span>
        </a>
        <a href="/vendor/transactions" class="nav-item">
          <i class="fas fa-exchange-alt"></i><span class="label">Transactions</span>
        </a>
        <a href="/vendor/customers" class="nav-item">
          <i class="fas fa-users"></i><span class="label">Customers</span>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Header -->
      <div class="header">
        <div class="header-left">
          <h1>Dashboard</h1>
        </div>
        <div class="header-right">
          <div class="notif-container">
            <button id="notificationsBtn" class="notif-button"><i class="fas fa-bell"></i></button>
            <div id="notificationsDropdown" style="display: none;">
              <ul id="notificationsList"></ul>
            </div>
          </div>
          <div class="user-profile">
            <div class="profile-pic"><i class="fas fa-user"></i></div>
            <div class="profile-info">
              <span class="user-name">{{vendorName}}</span>
              <span class="user-role">Vendor</span>
            </div>
          </div>
          <form id="logoutForm" action="/logout" method="POST" style="display:inline;">
            <button type="submit" class="logout">Log out</button>
          </form>
        </div>
      </div>

      <!-- Metrics -->
      <div class="metrics-row-1">
        <div class="metric-card">
          <div class="card-icon"><i class="fas fa-wallet"></i></div>
          <div class="card-content">
            <h3>Total Sales</h3>
            <div class="metric-value">₱{{totalSales}}</div>
            <div class="metric-comparison">vs last month</div>
            <div class="metric-change positive"><i class="fas fa-arrow-up"></i> 5.4%</div>
          </div>
        </div>
        <div class="metric-card">
          <div class="card-icon"><i class="fas fa-shopping-cart"></i></div>
          <div class="card-content">
            <h3>Total Transactions</h3>
            <div class="metric-value">{{totalTransactions}}</div>
            <div class="metric-comparison">vs last month</div>
            <div class="metric-change positive"><i class="fas fa-arrow-up"></i> 8.2%</div>
          </div>
        </div>
        <div class="metric-card">
          <div class="card-icon"><i class="fas fa-users"></i></div>
          <div class="card-content">
            <h3>Total Customers</h3>
            <div class="metric-value">{{totalCustomers}}</div>
            <div class="metric-comparison">vs last month</div>
            <div class="metric-change negative"><i class="fas fa-arrow-down"></i> 2.1%</div>
          </div>
        </div>
      </div>

      <!-- Charts -->
      <div class="charts-row">
        <div class="chart-card">
          <div class="chart-header">
            <h3>Sales Trend</h3>
            <p>Daily sales performance</p>
          </div>
          <div class="chart-container"><canvas id="salesTrendChart"></canvas></div>
        </div>
        <div class="chart-card">
          <div class="chart-header">
            <h3>Top Products</h3>
            <p>Best selling items</p>
          </div>
          <div class="chart-container"><canvas id="topProductsChart"></canvas></div>
        </div>
      </div>

      <!-- Tables -->
      <div class="tables-section">
        <div class="table-container">
          <h2>Top Customers</h2>
          <div class="table-scroll">
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Total Spent</th>
                  <th>Transactions</th>
                </tr>
              </thead>
              <tbody>
                {{#each topCustomers}}
                  <tr>
                    <td>{{this.name}}</td>
                    <td>₱{{this.totalSpent}}</td>
                    <td>{{this.transactions}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>

        <div class="table-container">
          <h2>Low Stock Alerts</h2>
          <div class="table-scroll">
            <table>
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Remaining Stock</th>
                </tr>
              </thead>
              <tbody>
                {{#each lowStock}}
                  <tr>
                    <td>{{this.product}}</td>
                    <td>{{this.stock}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Charts Script -->
  <script src="/js/vendorDashboard.js"></script>
</body>
</html>