<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{{appName}} - Dashboard</title>

  <link rel="stylesheet" href="styles.css"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="logo">
        <h2>{{appName}}</h2>
      </div>

      <nav class="nav-menu">
        <ul>
          <li class="active">
            <a href="#dashboard">
              <i class="fas fa-chart-line"></i>
              <span>Dashboard</span>
            </a>
          </li>

          <li class="has-submenu">
            <a href="#reports" class="menu-toggle">
              <i class="fas fa-file-alt"></i>
              <span>Generate Reports</span>
              <i class="fas fa-chevron-right"></i>
            </a>
            <ul class="submenu">
              <li>
                <a href="#sales">
                  <i class="fas fa-circle"></i>
                  <span>Sales</span>
                </a>
              </li>
              <li>
                <a href="#user-transactions">
                  <i class="fas fa-circle"></i>
                  <span>User Transactions</span>
                </a>
              </li>
              <li>
                <a href="#user-activity">
                  <i class="fas fa-circle"></i>
                  <span>User Activity</span>
                </a>
              </li>
            </ul>
          </li>

          <li>
            <a href="Transactions.html">
              <i class="fas fa-exchange-alt"></i>
              <span>Transactions</span>
            </a>
          </li>
          <li>
            <a href="Users.html">
              <i class="fas fa-fingerprint"></i>
              <span>Users</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Header -->
      <header class="header">
        <h1>{{pageTitle}}</h1>
        <div class="header-actions">
          <i class="fas fa-bell"></i>
          <span class="logout">Log out</span>
        </div>
      </header>

      <!-- Summary Cards -->
      <div class="summary-cards">
        {{#each summaryCards}}
          <div class="card">
            <div class="card-number">{{this.number}}</div>
            <div class="card-label">{{this.label}}</div>
          </div>
        {{/each}}
      </div>

      <!-- Content Sections -->
      <div class="content-sections">
        <!-- Vendors Section -->
        <div class="section vendors-section">
          <h3>Vendors</h3>
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Vendors</th>
                  <th>Store</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                {{#each vendors}}
                  <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.store}}</td>
                    <td>{{this.status}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>

        <!-- Recent Transactions Section -->
        <div class="section transactions-section">
          <h3>Recent Transactions</h3>
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>User</th>
                  <th>Points</th>
                  <th>Store</th>
                </tr>
              </thead>
              <tbody>
                {{#each transactions}}
                  <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.user}}</td>
                    <td>{{this.points}}</td>
                    <td>{{this.store}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Logout Confirmation Modal -->
  <div id="logoutModal" class="modal">
    <div class="modal-content">
      <div class="modal-text">Are you sure you want to logout?</div>
      <div class="modal-buttons">
        <button class="modal-btn yes-btn">YES</button>
        <button class="modal-btn no-btn">NO</button>
      </div>
    </div>
  </div>

  <script src="script.js"></script>
</body>
</html>
