        if (!storeId) return;
        
        try {
          const response = await fetch(`/api/owner/stores/${storeId}`);
          if (response.ok) {
            const store = await response.json();
            const imgContainer = document.getElementById('storeImageHeader');
            const iconContainer = document.getElementById('storeIconHeader');
            
            if (store.store_image) {
              if (imgContainer) {
                imgContainer.src = store.store_image;
                imgContainer.style.display = 'block';
              }
              if (iconContainer) {
                iconContainer.style.display = 'none';
              }
            } else {
              if (imgContainer) {
                imgContainer.style.display = 'none';
              }
              if (iconContainer) {
                iconContainer.style.display = 'flex';
              }
            }
          }
        } catch (err) {
          console.error('Error updating store image:', err);
        }
      }

      // Open add product modal
      addProductBtn.addEventListener('click', () => {
        // Get selected store from dropdown
        const selectedStoreId = storeSelector ? storeSelector.value : '';
        
        // Validate that a specific store is selected (not "All Stores")
        if (!selectedStoreId) {
          alert('‚ö†Ô∏è Please select a specific store from the dropdown before adding a product.');
          return;
        }
        
        document.getElementById('modalTitle').textContent = 'Add New Product';
        document.getElementById('submitBtn').textContent = 'Save Product';
        productForm.reset();
        document.getElementById('product_id').value = '';
        
        // Set the store_id from dropdown selection
        document.getElementById('store_id').value = selectedStoreId;
        
        productForm.action = '/api/owner/products/add';
        
        // Reset image preview
        const imagePreview = document.getElementById('imagePreview');
        imagePreview.innerHTML = '<i class="fas fa-cloud-upload-alt"></i><span>Click to upload product image</span>';
        
        productModal.style.display = 'block';
      });

      // Close modals
      closeModal.addEventListener('click', () => {
        productModal.style.display = 'none';
      });

      closeDeleteModal.addEventListener('click', () => {
        deleteModal.style.display = 'none';
      });

      cancelBtn.addEventListener('click', () => {
        productModal.style.display = 'none';
      });

      cancelDeleteBtn.addEventListener('click', () => {
        deleteModal.style.display = 'none';
      });

      // Close modal when clicking outside
      window.addEventListener('click', (e) => {
        if (e.target === productModal) {
          productModal.style.display = 'none';
        }
        if (e.target === deleteModal) {
          deleteModal.style.display = 'none';
        }
      });

      // Handle product form submission
      productForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(productForm);
        const submitBtn = document.getElementById('submitBtn');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Saving...';
        submitBtn.disabled = true;
        try {
          const url = productForm.action;
          const response = await fetch(url, {
            method: 'POST',
            headers: {
              'Accept': 'application/json'
            },
            body: formData
          });
          const result = await response.json();
          if (response.ok) {
            const isEdit = url.includes('/edit/');
            alert(isEdit ? '‚úÖ Product updated successfully!' : '‚úÖ Product added successfully!');
            productModal.style.display = 'none';
            window.location.reload();
          } else {
            const isEdit = url.includes('/edit/');
            alert(`‚ùå Failed to ${isEdit ? 'update' : 'add'} product: ${result.message || 'Unknown error'}`);
          }
        } catch (error) {
          console.error('Error adding/updating product:', error);
          alert('‚ùå Something went wrong.');
        } finally {
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }
      });


      // Handle delete button clicks
    document.addEventListener('click', async (e) => {
      if (e.target.classList.contains('delete-btn') && !e.target.id) {
        e.preventDefault();
        const form = e.target.closest('form');
        const action = form.getAttribute('action');

        if (confirm('‚ö†Ô∏è Are you sure you want to delete this product?\\n\\nNote: Products with transaction history cannot be deleted.')) {
          try {
            const response = await fetch(action, { 
              method: 'POST',
              headers: {
                'Accept': 'application/json'
              }
            });
            const result = await response.json();
            
            if (response.ok) {
              alert('üóëÔ∏è Product deleted successfully');
              window.location.reload();
            } else {
              // Show detailed error message
              if (response.status === 400) {
                alert(`‚ö†Ô∏è Cannot Delete Product\\n\\n${result.message}`);
              } else {
                alert(`‚ùå Failed to delete product: ${result.message || 'Unknown error'}`);
              }
            }
          } catch (err) {
            console.error(err);
            alert('‚ùå Something went wrong while deleting the product.');
          }
        }
      }
    });


      // Handle edit link clicks
      document.addEventListener('click', async (e) => {
        let editBtn = null;
        if (e.target.classList.contains('edit-link')) {
          editBtn = e.target;
        } else if (e.target.closest('.edit-link')) {
          editBtn = e.target.closest('.edit-link');
        }
        if (editBtn) {
          e.preventDefault();
          const productId = editBtn.getAttribute('data-id');
          try {
            // Fetch product data
            const response = await fetch(`/api/owner/products/get/${productId}`);
            const product = await response.json();
            if (response.ok && product) {
              // Set modal to edit mode
              document.getElementById('modalTitle').textContent = 'Edit Product';
              document.getElementById('submitBtn').textContent = 'Update Product';
              // Populate form fields
              document.getElementById('product_id').value = product.id;
              document.getElementById('productName').value = product.product_name || '';
              document.getElementById('productCategory').value = product.product_type || '';
              document.getElementById('productPrice').value = product.price || '';
              document.getElementById('store_id').value = product.store_id || '';
              // Set form action for edit
              productForm.action = `/api/owner/products/edit/${product.id}`;
              // Show current image if exists
              const imagePreview = document.getElementById('imagePreview');
              if (product.product_image) {
                imagePreview.innerHTML = `<img src="${product.product_image}" alt="Current Image" style="max-width: 100%; max-height: 200px; border-radius: 4px;">`;
              } else {
                imagePreview.innerHTML = '<i class="fas fa-cloud-upload-alt"></i><span>Click to upload product image</span>';
              }
              document.getElementById('productModal').style.display = 'block';
            }
          } catch (err) {
            alert('‚ùå Failed to load product details.');
          }
        }
      });

      // Handle product form submission
      productForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(productForm);
        const submitBtn = document.getElementById('submitBtn');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Saving...';
        submitBtn.disabled = true;
        try {
          const url = productForm.action;
          const response = await fetch(url, {
            method: 'POST',
            headers: {
              'Accept': 'application/json'
            },
            body: formData
          });
          const result = await response.json();
          if (response.ok) {
            const isEdit = url.includes('/edit/');
            alert(isEdit ? '‚úÖ Product updated successfully!' : '‚úÖ Product added successfully!');
            productModal.style.display = 'none';
            window.location.reload();
          } else {
            const isEdit = url.includes('/edit/');
            alert(`‚ùå Failed to ${isEdit ? 'update' : 'add'} product: ${result.message || 'Unknown error'}`);
          }
        } catch (error) {
          console.error('Error adding/updating product:', error);
          alert('‚ùå Something went wrong.');
        } finally {
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }
      });

      // Handle image preview
      const productImage = document.getElementById('productImage');
      const imagePreview = document.getElementById('imagePreview');

      productImage.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = (e) => {
            imagePreview.innerHTML = `<img src="${e.target.result}" alt="Preview" style="max-width: 100%; max-height: 200px; border-radius: 4px;">`;
          };
          reader.readAsDataURL(file);
        }
      });

      // Custom modal for delete confirmation
      let pendingDeleteId = null;
      document.addEventListener('click', function(e) {
        let btn = null;
        if (e.target.classList.contains('custom-delete')) {
          btn = e.target;
        } else if (e.target.closest('.custom-delete')) {
          btn = e.target.closest('.custom-delete');
        }
        if (btn && btn.getAttribute) {
          pendingDeleteId = btn.getAttribute('data-id');
          document.getElementById('deleteConfirmModal').style.display = 'flex';
        }
      });

      document.getElementById('deleteCancelBtn').onclick = function() {
        document.getElementById('deleteConfirmModal').style.display = 'none';
        pendingDeleteId = null;
      };

      document.getElementById('deleteConfirmBtn').onclick = async function() {
        if (!pendingDeleteId) return;
        const modal = document.getElementById('deleteConfirmModal');
        modal.style.display = 'none';
        try {
          const response = await fetch(`/api/owner/products/delete/${pendingDeleteId}`, {
            method: 'DELETE',
            headers: { 'Accept': 'application/json' }
          });
          const result = await response.json();
          if (response.ok && result.success) {
            alert('‚úÖ Product deleted successfully!');
            window.location.reload();
          } else {
            if (result.message && result.message.includes('transaction history')) {
              // Show custom reason modal
              document.getElementById('deleteReasonText').textContent = 'Cannot delete this product because it has transaction history. Products with sales records cannot be removed for data integrity.';
              document.getElementById('deleteReasonModal').style.display = 'flex';
            } else {
              document.getElementById('deleteReasonText').textContent = result.message || 'Unknown error';
              document.getElementById('deleteReasonModal').style.display = 'flex';
            }
          }
              // Close reason modal
              document.getElementById('deleteReasonCloseBtn').onclick = function() {
                document.getElementById('deleteReasonModal').style.display = 'none';
              };
        } catch (error) {
          alert('‚ùå Something went wrong.');
        }
        pendingDeleteId = null;
      };

      // Formal popup function
      function showFormalPopup(message) {
        let modal = document.getElementById('formalPopupModal');
        if (!modal) {
          modal = document.createElement('div');
          modal.id = 'formalPopupModal';
          modal.style.position = 'fixed';
          modal.style.top = '0';
          modal.style.left = '0';
          modal.style.width = '100vw';
          modal.style.height = '100vh';
          modal.style.background = 'rgba(0,0,0,0.4)';
          modal.style.display = 'flex';
          modal.style.alignItems = 'center';
          modal.style.justifyContent = 'center';
          modal.style.zIndex = '9999';
          modal.innerHTML = `
            <div style="background: #fff; padding: 32px 24px; border-radius: 8px; box-shadow: 0 2px 16px rgba(0,0,0,0.15); max-width: 400px; text-align: center;">
              <h3 style="margin-bottom: 16px; color: #d32f2f;">Cannot Delete Product</h3>
              <p style="margin-bottom: 24px; color: #333;">${message}</p>
              <button id="formalPopupCloseBtn" style="background: #1976d2; color: #fff; border: none; padding: 8px 20px; border-radius: 4px; cursor: pointer; font-size: 16px;">OK</button>
            </div>
          `;
          document.body.appendChild(modal);
          document.getElementById('formalPopupCloseBtn').onclick = function() {
            modal.remove();
          };
        } else {
          modal.querySelector('p').textContent = message;
          modal.style.display = 'flex';
        }
      }
    });
  </script>
