    function handleDiscountTypeChange() {
      const discountType = document.getElementById('discountType').value;
      const discountPercentageRow = document.getElementById('discountPercentageRow');
      const discountValueGroup = document.getElementById('discountValueGroup');
      const productSelectionRow = document.getElementById('productSelectionRow');
      const descriptionGroup = document.getElementById('descriptionGroup');
      const pointsInput = document.getElementById('points');
      
      // Reset form fields
      document.getElementById('discountPercentage').value = '';
      document.getElementById('discountValue').value = '';
      document.getElementById('selectedProduct').value = '';
      document.getElementById('description').value = '';
      document.getElementById('buyQuantity').value = '';
      document.getElementById('getQuantity').value = '';
      document.getElementById('buyProduct').value = '';
      document.getElementById('getProduct').value = '';
      pointsInput.value = '';
      
      // Hide all type-specific fields initially
      discountPercentageRow.style.display = 'none';
      discountValueGroup.style.display = 'none';
      productSelectionRow.style.display = 'none';
      descriptionGroup.style.display = 'none';
      const buyXGetYFields = document.getElementById('buyXGetYFields');
      if (buyXGetYFields) buyXGetYFields.style.display = 'none';
      
      if (discountType === 'discount') {
        discountPercentageRow.style.display = 'block';
        descriptionGroup.style.display = 'block';
        // Auto-generate description for discount type
        updateDiscountDescription();
        document.getElementById('discountPercentage').addEventListener('input', updateDiscountDescription);
        document.getElementById('points').addEventListener('input', updateDiscountDescription);
      } else if (discountType === 'free') {
        productSelectionRow.style.display = 'block';
        descriptionGroup.style.display = 'block';
        loadProducts(); // Load products for selection
        updateFreeItemDescription();
        document.getElementById('selectedProduct').addEventListener('change', updateFreeItemDescription);
        document.getElementById('points').addEventListener('input', updateFreeItemDescription);
      } else if (discountType === 'buy_x_get_y') {
        buyXGetYFields.style.display = 'block';
        descriptionGroup.style.display = 'block';
        loadProductsForBuyXGetY(); // Load products for both dropdowns
        updateBuyXGetYDescription();
        document.getElementById('buyQuantity').addEventListener('input', updateBuyXGetYDescription);
        document.getElementById('getQuantity').addEventListener('input', updateBuyXGetYDescription);
        document.getElementById('buyProduct').addEventListener('change', updateBuyXGetYDescription);
        document.getElementById('getProduct').addEventListener('change', updateBuyXGetYDescription);
        document.getElementById('points').addEventListener('input', updateBuyXGetYDescription);
      }
      
      // Points field is always editable
      pointsInput.readOnly = false;
      pointsInput.placeholder = 'e.g., 10';
    }

    // Auto-generate description for discount type
    function updateDiscountDescription() {
      const discountPercentage = document.getElementById('discountPercentage').value;
      const points = document.getElementById('points').value || '0';
      const descriptionField = document.getElementById('description');
      if (discountPercentage && points) {
        descriptionField.value = `Get ${discountPercentage}% off with ${points} points`;
      } else {
        descriptionField.value = '';
      }
    }

    function setupDiscountUnit() {
      const discountType = document.getElementById('discountType');
      const discountUnit = document.getElementById('discountUnit');

      // Sync Discount Value unit with Discount Type
      if (discountType && discountUnit) {
        const syncUnit = () => {
          const type = discountType.value;
          if (type === 'discount') { // Changed from 'percentage' to 'discount'
            discountUnit.textContent = '%';
          } else {
            discountUnit.textContent = '‚Ç±';
          }
        };
        // Remove existing listeners to prevent duplicates
        discountType.removeEventListener('change', syncUnit);
        discountType.addEventListener('change', syncUnit);
        syncUnit();
      }
    }

    // Form submission
    document.getElementById('promotionForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const promotionData = Object.fromEntries(formData);
      
      // Check if this is an edit operation
      const editId = this.dataset.editId;
      const isEdit = !!editId;
      
      // Handle discount type specific data
      if (promotionData.discountType === 'discount') {
        promotionData.discountPercentage = parseFloat(document.getElementById('discountPercentage').value || '0');
        // Validate discount percentage
        if (!promotionData.discountPercentage || promotionData.discountPercentage <= 0) {
          alert('Please enter a valid discount percentage');
          return;
        }
      } else if (promotionData.discountType === 'free') {
        // Validate product selection for free items
        promotionData.selectedProduct = document.getElementById('selectedProduct').value;
        promotionData.description = document.getElementById('description').value;
        
        if (!promotionData.selectedProduct) {
          alert('Please select a product for the free item promotion');
          return;
        }
        if (!promotionData.description) {
          alert('Description is required for free item promotions');
          return;
        }
      } else if (promotionData.discountType === 'buy_x_get_y') {
        // Validate Buy X Get Y fields
        promotionData.buyQuantity = parseInt(document.getElementById('buyQuantity').value || '0', 10);
        promotionData.getQuantity = parseInt(document.getElementById('getQuantity').value || '0', 10);
        promotionData.buyProduct = document.getElementById('buyProduct').value;
        promotionData.getProduct = document.getElementById('getProduct').value;
        promotionData.description = document.getElementById('description').value;
        
        if (!promotionData.buyQuantity || promotionData.buyQuantity <= 0) {
          alert('Please enter a valid buy quantity (X)');
          return;
        }
        if (!promotionData.getQuantity || promotionData.getQuantity <= 0) {
          alert('Please enter a valid get quantity (Y)');
          return;
        }
        if (!promotionData.buyProduct) {
          alert('Please select a product to buy (X)');
          return;
        }
        if (!promotionData.getProduct) {
          alert('Please select a product to get (Y)');
          return;
        }
        if (!promotionData.description) {
          alert('Description is required for Buy X Get Y promotions');
          return;
        }
      } else if (promotionData.discountType !== 'discount' && promotionData.discountType !== 'free' && promotionData.discountType !== 'buy_x_get_y') {
        // Validate discount value for other types
        if (!promotionData.discountValue || parseFloat(promotionData.discountValue) <= 0) {
          alert('Please enter a valid discount value');
          return;
        }
      }
      
      // Validate points
      promotionData.points = parseInt(document.getElementById('points').value || '0', 10);
      if (promotionData.points < 0) {
        alert('Points required cannot be negative');
        return;
      }
      // Ensure points_required is sent for backend update
      promotionData.points_required = promotionData.points;
      
      console.log('Promotion data:', promotionData);
      
      // Show loading state
      const submitBtn = this.querySelector('button[type=\"submit\"]');
      const originalText = submitBtn.textContent;
      
      try {
        submitBtn.textContent = 'Saving...';
        submitBtn.disabled = true;
        
        // Send data to server
        const url = isEdit ? `/api/owner/promotions/${editId}` : '/api/owner/promotions';
        const method = isEdit ? 'PUT' : 'POST';
        
        const response = await fetch(url, {
          method: method,
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(promotionData)
        });
        
        const result = await response.json();
        
        if (response.ok) {
          let message = isEdit ? 'Promotion updated successfully!' : 'Promotion created successfully!';
          
          // Show promotion code if creating new promotion
          if (!isEdit && result.promotionCode) {
            message += `\n\nüéüÔ∏è Promotion Code: ${result.promotionCode}\n\nCustomers can use this code to redeem the promotion.`;
          }
          
          alert(message);
          closePromotionModal();
          // Clear edit ID
          delete this.dataset.editId;
          // Reload promotions list
          loadPromotions();
        } else {
          alert('Error: ' + (result.error || (isEdit ? 'Failed to update promotion' : 'Failed to create promotion')));
        }
      } catch (error) {
        console.error('Error submitting promotion:', error);
        alert('Network error. Please try again.');
      } finally {
        // Reset button state
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    });

