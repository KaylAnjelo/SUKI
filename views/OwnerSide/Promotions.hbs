    async function editPromotion(id) {
      try {
        // Fetch promotion data
        const response = await fetch(`/api/owner/promotions/${id}`);
        const data = await response.json();
        
        if (!response.ok) {
          alert('Error loading promotion: ' + (data.error || 'Unknown error'));
          return;
        }
        
        const promotion = data.promotion;
        
        // Initialize store selector
        initializeStoreSelector();
        
        // Set modal title
        document.getElementById('modalTitle').textContent = 'Edit Promotion';
        
        // Populate basic fields
        document.getElementById('promotionName').value = promotion.reward_name || '';
        document.getElementById('points').value = promotion.points_required || '';
        
        // Set store selection
        if (promotion.store_id) {
          const storeSelect = document.getElementById('promoStoreSelect');
          if (storeSelect) storeSelect.value = promotion.store_id;
        }
        
        // Set dates from database if available
        if (promotion.start_date) {
          const startDate = new Date(promotion.start_date);
          document.getElementById('startDate').value = startDate.toISOString().split('T')[0];
        } else {
          const today = new Date().toISOString().split('T')[0];
          document.getElementById('startDate').value = today;
        }
        
        if (promotion.end_date) {
          const endDate = new Date(promotion.end_date);
          document.getElementById('endDate').value = endDate.toISOString().split('T')[0];
        } else {
          const nextMonth = new Date();
          nextMonth.setMonth(nextMonth.getMonth() + 1);
          document.getElementById('endDate').value = nextMonth.toISOString().split('T')[0];
        }
        
        // Determine promotion type and populate accordingly
        const description = promotion.description || '';
        let discountType = '';
        
        if (promotion.discount_type === 'percentage' || description.includes('% off')) {
          discountType = 'discount';
          document.getElementById('discountType').value = 'discount';
          if (promotion.discount_value) {
            document.getElementById('discountPercentage').value = promotion.discount_value;
          } else {
            const match = description.match(/(\d+)%/);
            if (match) {
              document.getElementById('discountPercentage').value = match[1];
            }
          }
        } else if (promotion.discount_type === 'fixed' || description.includes('Get free')) {
          discountType = 'free';
          document.getElementById('discountType').value = 'free';
        } else if (promotion.discount_type === 'buy_x_get_y') {
          discountType = 'buy_x_get_y';
          document.getElementById('discountType').value = 'buy_x_get_y';
          
          // Parse buy quantity from description
          const buyMatch = description.match(/Buy (\d+)/);
          if (buyMatch && document.getElementById('buyQuantity')) {
            document.getElementById('buyQuantity').value = buyMatch[1];
          }
          
          // Parse get quantity from description
          const getMatch = description.match(/get (\d+)/i);
          if (getMatch && document.getElementById('getQuantity')) {
            document.getElementById('getQuantity').value = getMatch[1];
          }
        }
        
        // Set description
        document.getElementById('description').value = description;
        
        // Trigger form state changes to show/hide appropriate fields
        handleDiscountTypeChange();
        
        // Store the promotion ID for updating
        document.getElementById('promotionForm').dataset.editId = id;
        
        // Show modal
        document.getElementById('promotionModal').style.display = 'block';
        setupDiscountUnit();
        
      } catch (error) {
        console.error('Error loading promotion for edit:', error);
        alert('Error loading promotion data. Please try again.');
      }
    }

    function closePromotionModal() {
      document.getElementById('promotionModal').style.display = 'none';
      // Clear edit ID
      delete document.getElementById('promotionForm').dataset.editId;
    }

    async function deletePromotion(id) {
      if (confirm('Are you sure you want to delete this promotion? This action cannot be undone.')) {
        try {
          const response = await fetch(`/api/owner/promotions/${id}`, {
            method: 'DELETE'
          });
          
