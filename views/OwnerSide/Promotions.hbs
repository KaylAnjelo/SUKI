    // Update description for Buy X Get Y promotions
    function updateBuyXGetYDescription() {
      const buyQuantity = document.getElementById('buyQuantity').value;
      const getQuantity = document.getElementById('getQuantity').value;
      const buyProduct = document.getElementById('buyProduct');
      const getProduct = document.getElementById('getProduct');
      const pointsInput = document.getElementById('points');
      const descriptionField = document.getElementById('description');
      
