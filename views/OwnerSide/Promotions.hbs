<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Promotions - SUKI Incorporation</title>
  <link rel="stylesheet" href="/css/OwnerStyles.css">
  <script src="/js/notifications.js" defer></script>
  <script src="/js/logout.js" defer></script>
  <script src="/js/sidebar.js" defer></script>
  <link rel="icon" type="image/png" href="/assets/SUKI Logo 2.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    .promotions-container {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    .promotions-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .add-promotion-btn {
      background: #7c0f0f;
      color: white;
      border: none;
      padding: 12px 24px;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: background-color 0.2s ease;
    }

    .add-promotion-btn:hover {
      background: #5a0000;
    }

    .promotions-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 20px;
    }

    .promotion-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      border: 1px solid #e5e7eb;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .promotion-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }

    .promotion-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 16px;
    }

    .promotion-title {
      font-size: 18px;
      font-weight: 600;
      color: #111827;
      margin: 0;
    }

    .promotion-status {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-active {
      background: #dcfce7;
      color: #166534;
    }

    .status-inactive {
      background: #fef2f2;
      color: #dc2626;
    }

    .status-scheduled {
      background: #fef3c7;
      color: #92400e;
    }

    .promotion-details {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-bottom: 16px;
    }

    .promotion-detail {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .promotion-detail-label {
      font-size: 14px;
      color: #6b7280;
      font-weight: 500;
    }

    .promotion-detail-value {
      font-size: 14px;
      color: #111827;
      font-weight: 600;
    }

    .discount-badge {
      background: linear-gradient(135deg, #7c0f0f 0%, #C72C41 100%);
      color: white;
      padding: 8px 16px;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 700;
      text-align: center;
    }

    .promotion-actions {
      display: flex;
      gap: 8px;
      margin-top: 16px;
    }

    .action-btn {
      flex: 1;
      padding: 8px 12px;
      border: 1px solid #d1d5db;
      border-radius: 6px;
      background: white;
      color: #374151;
      font-size: 12px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .action-btn:hover {
      background: #f9fafb;
      border-color: #9ca3af;
    }

    .action-btn.edit {
      color: #7c0f0f;
      border-color: #7c0f0f;
    }

    .action-btn.edit:hover {
      background: #7c0f0f;
      color: white;
    }

    .action-btn.delete {
      color: #dc2626;
      border-color: #dc2626;
    }

    .action-btn.delete:hover {
      background: #dc2626;
      color: white;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #6b7280;
    }

    .empty-state i {
      font-size: 48px;
      margin-bottom: 16px;
      color: #d1d5db;
    }

    .empty-state h3 {
      margin: 0 0 8px 0;
      font-size: 18px;
      color: #374151;
    }

    .empty-state p {
      margin: 0 0 24px 0;
      font-size: 14px;
    }

    /* Modal Styles */
    .modal {
      position: fixed;
      inset: 0;
      display: none;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.4);
      z-index: 1000;
      padding: 20px;
    }

    .modal[style*="display: block"] { 
      display: flex !important; 
    }

    .modal-content {
      width: 100%;
      max-width: 500px;
      max-height: 80vh;
      height: auto;
      display: flex;
      flex-direction: column;
      background: white;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.18);
      overflow: visible;
      margin: auto;
      position: relative;
    }

    .modal-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px 24px;
      border-bottom: 1px solid #e5e7eb;
      background: #f9fafb;
    }

    .modal-header h2 {
      margin: 0;
      font-size: 20px;
      color: #111827;
    }

    .close-btn {
      background: none;
      border: none;
      font-size: 24px;
      color: #6b7280;
      cursor: pointer;
      padding: 4px;
    }

    .close-btn:hover {
      color: #374151;
    }

    .modal-body {
      padding: 16px 20px 80px 20px;
      flex: 1;
      overflow-y: auto;
      overflow-x: hidden;
      max-height: calc(80vh - 140px);
      min-height: 200px;
      scrollbar-width: auto;
      scrollbar-color: #9ca3af #e5e7eb;
    }

    .modal-body::-webkit-scrollbar {
      width: 8px;
    }

    .modal-body::-webkit-scrollbar-track {
      background: #e5e7eb;
      border-radius: 4px;
    }

    .modal-body::-webkit-scrollbar-thumb {
      background: #9ca3af;
      border-radius: 4px;
    }

    .modal-body::-webkit-scrollbar-thumb:hover {
      background: #6b7280;
    }

    .form-group {
      margin-bottom: 14px;
    }

    .form-group label {
      display: block;
      margin-bottom: 6px;
      font-weight: 600;
      color: #374151;
      font-size: 14px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid #d1d5db;
      border-radius: 8px;
      font-size: 14px;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #7c0f0f;
      box-shadow: 0 0 0 3px rgba(124, 15, 15, 0.1);
    }

    .input-with-unit { position: relative; }
    .input-unit {
      position: absolute;
      left: 12px;
      top: 69%;
      transform: translateY(-50%);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: #6b7280;
      font-weight: 700;
      font-size: 14px;
      pointer-events: none;
    }
    /* Add left padding when unit shown on the left */
    .input-with-unit input { padding-left: 34px; }

    /* Neutralize browser red borders for invalid fields */
    .form-group input:invalid,
    .form-group select:invalid,
    .form-group textarea:invalid {
      border-color: #d1d5db;
      box-shadow: none;
    }
    .form-group input:user-invalid,
    .form-group select:user-invalid,
    .form-group textarea:user-invalid {
      border-color: #d1d5db;
      box-shadow: none;
    }

    .form-group textarea {
      resize: vertical;
      min-height: 80px;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }

    .modal-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 12px;
      padding: 16px 24px;
      border-top: 1px solid #e5e7eb;
      background: white;
      flex-shrink: 0;
      min-height: 60px;
      position: sticky;
      bottom: 0;
      z-index: 10;
      border-radius: 0 0 12px 12px;
    }

    .btn {
      padding: 10px 20px;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .btn-secondary {
      background: white;
      color: #374151;
      border: 1px solid #d1d5db;
    }

    .btn-secondary:hover {
      background: #f9fafb;
    }

    .btn-primary {
      background: #7c0f0f;
      color: white;
      border: none;
    }

    .btn-primary:hover {
      background: #5a0000;
    }

    /* Promotion Card Styles */
    .promotion-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      border: 1px solid #e5e7eb;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .promotion-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }

    .promotion-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
    }

    .promotion-header h3 {
      margin: 0;
      color: #1f2937;
      font-size: 18px;
      font-weight: 600;
    }

    .status-badge {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-active {
      background: #d1fae5;
      color: #065f46;
    }

    .status-inactive {
      background: #fee2e2;
      color: #991b1b;
    }

    .status-expired {
      background: #f3f4f6;
      color: #6b7280;
    }

    .promotion-description {
      color: #6b7280;
      font-size: 14px;
      margin-bottom: 16px;
      line-height: 1.5;
    }

    .promotion-details {
      margin-bottom: 16px;
    }

    .detail-item {
      display: flex;
      justify-content: space-between;
      padding: 6px 0;
      border-bottom: 1px solid #f3f4f6;
      font-size: 14px;
    }

    .detail-item:last-child {
      border-bottom: none;
    }

    .promotion-actions {
      display: flex;
      gap: 8px;
      justify-content: flex-end;
    }

    .edit-btn, .delete-btn {
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: all 0.2s;
    }

    .edit-btn {
      background: #dbeafe;
      color: #1e40af;
    }

    .edit-btn:hover {
      background: #bfdbfe;
    }

    .delete-btn {
      background: #fee2e2;
      color: #dc2626;
    }

    .delete-btn:hover {
      background: #fecaca;
    }

    /* Toggle switch for Mode */
    .segmented {
      display: inline-flex;
      background: #e5e7eb;
      padding: 4px;
      border-radius: 9999px;
      gap: 6px;
    }
    .segment {
      border: none;
      background: transparent;
      padding: 8px 16px;
      border-radius: 9999px;
      font-weight: 600;
      color: #374151;
      cursor: pointer;
      user-select: none;
    }
    .segment:focus { outline: none; }
    .segment:focus-visible { box-shadow: 0 0 0 3px rgba(124, 15, 15, 0.2); }
    .segment.active {
      background: #7c0f0f;
      color: #ffffff;
      box-shadow: 0 4px 10px rgba(124, 15, 15, 0.25);
    }

    @media (max-width: 768px) {
      .promotions-grid {
        grid-template-columns: 1fr;
      }
      
      .form-row {
        grid-template-columns: 1fr;
      }
      
      .promotions-header {
        flex-direction: column;
        gap: 16px;
        align-items: stretch;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <aside class="sidebar">
      <button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle sidebar">
        <i class="fas fa-bars"></i>
      </button>
      <div class="logo">SUKI Incorporation</div>
      <nav class="nav">
        <a href="/owner/dashboard" class="nav-item">
          <i class="fas fa-chart-line"></i><span class="label">Dashboard</span>
        </a>
        <a href="/owner/sales-report" class="nav-item">
          <i class="fas fa-chart-bar"></i><span class="label">Sales Report</span>
        </a>
        <a href="/owner/transactions" class="nav-item">
          <i class="fas fa-exchange-alt"></i><span class="label">Transactions</span>
        </a>
        <a href="/owner/products" class="nav-item">
          <i class="fas fa-box"></i><span class="label">Products</span>
        </a>
        <a href="/owner/promotions" class="nav-item active">
          <i class="fas fa-percentage"></i><span class="label">Promotions</span>
        </a>
        <a href="/owner/profile/data" class="nav-item">
          <i class="fas fa-user"></i><span class="label">Profile</span>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="header">
        <div class="header-left">
          <h1>Promotions & Discounts</h1>
          <p class="header-date">Manage your store promotions and special offers</p>
        </div>
        <div class="header-right">
          <button id="notificationsBtn" class="notif-button"><i class="fas fa-bell"></i></button>
          <div id="notificationsDropdown" style="display: none;">
            <ul id="notificationsList"></ul>
          </div>
          <div class="user-profile">
            <div class="profile-pic">
              <i class="fas fa-user"></i>
            </div>
            <div class="profile-info">
              <span class="user-name">{{user.username}}</span>
            </div>
          </div>
          <form id="logoutForm" action="/logout" method="POST" style="display: inline;">
            <button type="submit" class="logout">Log out</button>
          </form>
        </div>
      </div>
      
      <!-- Promotions Content -->
      <div class="promotions-container">
        <div class="promotions-header">
          <div>
            <h2>Active Promotions</h2>
            <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">
              Create and manage discounts to attract more customers
            </p>
          </div>
          <button class="add-promotion-btn" onclick="openAddPromotionModal()">
            <i class="fas fa-plus"></i>
            Add Promotion
          </button>
        </div>

        <!-- Promotions Grid -->
        <div class="promotions-grid" id="promotionsGrid">
          <!-- Promotions will be loaded dynamically -->
        </div>
      </div>
    </main>
  </div>

  <!-- Add/Edit Promotion Modal -->
  <div id="promotionModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modalTitle">Add New Promotion</h2>
        <button class="close-btn" onclick="closePromotionModal()">&times;</button>
      </div>
      <form id="promotionForm" novalidate>
        <div class="modal-body">
          <div class="form-group">
            <label for="promotionName">Promotion Name</label>
            <input type="text" id="promotionName" name="name" required placeholder="e.g., Summer Sale">
          </div>
          
          

          <div class="form-row">
            <div class="form-group">
              <label for="discountType">Type</label>
              <select id="discountType" name="discountType" required onchange="handleDiscountTypeChange()">
                <option value="">Select type</option>
                <option value="discount">Discount</option>
                <option value="free">Free Item</option>
                <option value="buy_x_get_y">Buy X Get Y</option>
              </select>
            </div>
            <div class="form-group input-with-unit" id="discountValueGroup" style="display: none;">
              <label for="discountValue">Discount Value</label>
              <input type="number" id="discountValue" name="discountValue" placeholder="e.g., 20" min="1" max="100">
              <span class="input-unit" id="discountUnit">%</span>
            </div>
          </div>

          <!-- Discount Percentage Field (shown when discount type is selected) -->
          <div class="form-row" id="discountPercentageRow" style="display: none;">
            <div class="form-group">
              <label for="discountPercentage">Discount Percentage</label>
              <input type="number" id="discountPercentage" name="discountPercentage" placeholder="e.g., 15" min="1" max="100">
              <span style="margin-left: 8px; color: #6b7280;">%</span>
            </div>
          </div>

          <!-- Product Selection Field (shown when free type is selected) -->
          <div class="form-row" id="productSelectionRow" style="display: none;">
            <div class="form-group">
              <label for="selectedProduct">Select Product</label>
              <select id="selectedProduct" name="selectedProduct" onchange="updateFreeItemDescription()">
                <option value="">Choose a product...</option>
              </select>
            </div>
          </div>

          <!-- Auto-generated Description Field -->
          <div class="form-group" id="descriptionGroup" style="display: none;">
            <label for="description">Description</label>
            <textarea id="description" name="description" readonly placeholder="Description will be auto-generated"></textarea>
          </div>

          <!-- Buy X Get Y Fields (shown when buy_x_get_y type is selected) -->
          <div id="buyXGetYFields" style="display: none;">
            <div class="form-row">
              <div class="form-group">
                <label for="buyQuantity">Buy Quantity (X)</label>
                <input type="number" id="buyQuantity" name="buyQuantity" placeholder="e.g., 2" min="1" onchange="updateBuyXGetYDescription()">
              </div>
              <div class="form-group">
                <label for="getQuantity">Get Quantity (Y)</label>
                <input type="number" id="getQuantity" name="getQuantity" placeholder="e.g., 1" min="1" onchange="updateBuyXGetYDescription()">
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="buyProduct">Buy Product (X)</label>
                <select id="buyProduct" name="buyProduct" onchange="updateBuyXGetYDescription()">
                  <option value="">Choose product to buy...</option>
                </select>
              </div>
              <div class="form-group">
                <label for="getProduct">Get Product (Y)</label>
                <select id="getProduct" name="getProduct" onchange="updateBuyXGetYDescription()">
                  <option value="">Choose product to get...</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group" id="pointsGroup">
              <label for="points">Points Required</label>
              <input type="number" id="points" name="points" placeholder="e.g., 10" min="0">
              <small style="color: #6b7280; font-size: 12px;">Set the points customers need to redeem this promotion</small>
            </div>
          </div>

          

          <div class="form-row">
            <div class="form-group">
              <label for="startDate">Start Date</label>
              <input type="date" id="startDate" name="startDate" required>
            </div>
            <div class="form-group">
              <label for="endDate">End Date</label>
              <input type="date" id="endDate" name="endDate" required>
            </div>
          </div>

          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closePromotionModal()">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Promotion</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Modal functions
    function openAddPromotionModal() {
      document.getElementById('modalTitle').textContent = 'Add New Promotion';
      document.getElementById('promotionForm').reset();
      
      // Reset form state
      document.getElementById('discountPercentageRow').style.display = 'none';
      document.getElementById('discountValueGroup').style.display = 'none';
      document.getElementById('productSelectionRow').style.display = 'none';
      document.getElementById('descriptionGroup').style.display = 'none';
      const buyXGetYFields = document.getElementById('buyXGetYFields');
      if (buyXGetYFields) buyXGetYFields.style.display = 'none';
      document.getElementById('points').readOnly = false;
      document.getElementById('points').placeholder = 'e.g., 10';
      
      // Show modal
      document.getElementById('promotionModal').style.display = 'block';
      
      setupDiscountUnit();
    }

    async function editPromotion(id) {
      try {
        // Fetch promotion data
        const response = await fetch(`/api/promotions/${id}`);
        const data = await response.json();
        
        if (!response.ok) {
          alert('Error loading promotion: ' + (data.error || 'Unknown error'));
          return;
        }
        
        const promotion = data.promotion;
        
        // Set modal title
        document.getElementById('modalTitle').textContent = 'Edit Promotion';
        
        // Populate basic fields
        document.getElementById('promotionName').value = promotion.reward_name || '';
        document.getElementById('points').value = promotion.points_required || '';
        
        // Set dates if available (you may need to add these fields to the database)
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').value = today;
        const nextMonth = new Date();
        nextMonth.setMonth(nextMonth.getMonth() + 1);
        document.getElementById('endDate').value = nextMonth.toISOString().split('T')[0];
        
        // Determine promotion type from description and populate accordingly
        const description = promotion.description || '';
        let discountType = '';
        
        if (description.includes('% off your next purchase')) {
          discountType = 'discount';
          const match = description.match(/Get (\d+)% off/);
          if (match) {
            document.getElementById('discountType').value = 'discount';
            document.getElementById('discountPercentage').value = match[1];
          }
        } else if (description.includes('Get free') && description.includes('with') && description.includes('points')) {
          discountType = 'free';
          document.getElementById('discountType').value = 'free';
        } else if (description.includes('Buy') && description.includes('and get')) {
          discountType = 'buy_x_get_y';
          document.getElementById('discountType').value = 'buy_x_get_y';
        }
        
        // Set description
        document.getElementById('description').value = description;
        
        // Trigger form state changes
        handleDiscountTypeChange();
        
        // Store the promotion ID for updating
        document.getElementById('promotionForm').dataset.editId = id;
        
        // Show modal
        document.getElementById('promotionModal').style.display = 'block';
        setupDiscountUnit();
        
      } catch (error) {
        console.error('Error loading promotion for edit:', error);
        alert('Error loading promotion data. Please try again.');
      }
    }

    function closePromotionModal() {
      document.getElementById('promotionModal').style.display = 'none';
      // Clear edit ID
      delete document.getElementById('promotionForm').dataset.editId;
    }

    async function deletePromotion(id) {
      if (confirm('Are you sure you want to delete this promotion? This action cannot be undone.')) {
        try {
          const response = await fetch(`/api/promotions/${id}`, {
            method: 'DELETE'
          });
          
          const result = await response.json();
          
          if (response.ok) {
            alert('Promotion deleted successfully!');
            // Reload the promotions list
            loadPromotions();
          } else {
            alert('Error deleting promotion: ' + (result.error || 'Unknown error'));
          }
        } catch (error) {
          console.error('Error deleting promotion:', error);
          alert('Network error. Please try again.');
        }
      }
    }

    function handleDiscountTypeChange() {
      const discountType = document.getElementById('discountType').value;
      const discountPercentageRow = document.getElementById('discountPercentageRow');
      const discountValueGroup = document.getElementById('discountValueGroup');
      const productSelectionRow = document.getElementById('productSelectionRow');
      const descriptionGroup = document.getElementById('descriptionGroup');
      const pointsInput = document.getElementById('points');
      
      // Reset form fields
      document.getElementById('discountPercentage').value = '';
      document.getElementById('discountValue').value = '';
      document.getElementById('selectedProduct').value = '';
      document.getElementById('description').value = '';
      document.getElementById('buyQuantity').value = '';
      document.getElementById('getQuantity').value = '';
      document.getElementById('buyProduct').value = '';
      document.getElementById('getProduct').value = '';
      pointsInput.value = '';
      
      // Hide all type-specific fields initially
      discountPercentageRow.style.display = 'none';
      discountValueGroup.style.display = 'none';
      productSelectionRow.style.display = 'none';
      descriptionGroup.style.display = 'none';
      const buyXGetYFields = document.getElementById('buyXGetYFields');
      if (buyXGetYFields) buyXGetYFields.style.display = 'none';
      
      if (discountType === 'discount') {
        discountPercentageRow.style.display = 'block';
      } else if (discountType === 'free') {
        productSelectionRow.style.display = 'block';
        descriptionGroup.style.display = 'block';
        loadProducts(); // Load products for selection
      } else if (discountType === 'buy_x_get_y') {
        buyXGetYFields.style.display = 'block';
        descriptionGroup.style.display = 'block';
        loadProductsForBuyXGetY(); // Load products for both dropdowns
      }
      
      // Points field is always editable
      pointsInput.readOnly = false;
      pointsInput.placeholder = 'e.g., 10';
    }

    function setupDiscountUnit() {
      const discountType = document.getElementById('discountType');
      const discountUnit = document.getElementById('discountUnit');

      // Sync Discount Value unit with Discount Type
      if (discountType && discountUnit) {
        const syncUnit = () => {
          const type = discountType.value;
          if (type === 'discount') { // Changed from 'percentage' to 'discount'
            discountUnit.textContent = '%';
          } else {
            discountUnit.textContent = 'â‚±';
          }
        };
        // Remove existing listeners to prevent duplicates
        discountType.removeEventListener('change', syncUnit);
        discountType.addEventListener('change', syncUnit);
        syncUnit();
      }
    }

    // Form submission
    document.getElementById('promotionForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const promotionData = Object.fromEntries(formData);
      
      // Check if this is an edit operation
      const editId = this.dataset.editId;
      const isEdit = !!editId;
      
      // Handle discount type specific data
      if (promotionData.discountType === 'discount') {
        promotionData.discountPercentage = parseFloat(document.getElementById('discountPercentage').value || '0');
        // Validate discount percentage
        if (!promotionData.discountPercentage || promotionData.discountPercentage <= 0) {
          alert('Please enter a valid discount percentage');
          return;
        }
      } else if (promotionData.discountType === 'free') {
        // Validate product selection for free items
        promotionData.selectedProduct = document.getElementById('selectedProduct').value;
        promotionData.description = document.getElementById('description').value;
        
        if (!promotionData.selectedProduct) {
          alert('Please select a product for the free item promotion');
          return;
        }
        if (!promotionData.description) {
          alert('Description is required for free item promotions');
          return;
        }
      } else if (promotionData.discountType === 'buy_x_get_y') {
        // Validate Buy X Get Y fields
        promotionData.buyQuantity = parseInt(document.getElementById('buyQuantity').value || '0', 10);
        promotionData.getQuantity = parseInt(document.getElementById('getQuantity').value || '0', 10);
        promotionData.buyProduct = document.getElementById('buyProduct').value;
        promotionData.getProduct = document.getElementById('getProduct').value;
        promotionData.description = document.getElementById('description').value;
        
        if (!promotionData.buyQuantity || promotionData.buyQuantity <= 0) {
          alert('Please enter a valid buy quantity (X)');
          return;
        }
        if (!promotionData.getQuantity || promotionData.getQuantity <= 0) {
          alert('Please enter a valid get quantity (Y)');
          return;
        }
        if (!promotionData.buyProduct) {
          alert('Please select a product to buy (X)');
          return;
        }
        if (!promotionData.getProduct) {
          alert('Please select a product to get (Y)');
          return;
        }
        if (!promotionData.description) {
          alert('Description is required for Buy X Get Y promotions');
          return;
        }
      } else if (promotionData.discountType !== 'discount' && promotionData.discountType !== 'free' && promotionData.discountType !== 'buy_x_get_y') {
        // Validate discount value for other types
        if (!promotionData.discountValue || parseFloat(promotionData.discountValue) <= 0) {
          alert('Please enter a valid discount value');
          return;
        }
      }
      
      // Validate points
      promotionData.points = parseInt(document.getElementById('points').value || '0', 10);
      if (promotionData.points < 0) {
        alert('Points required cannot be negative');
        return;
      }
      
      console.log('Promotion data:', promotionData);
      
      // Show loading state
      const submitBtn = this.querySelector('button[type=\"submit\"]');
      const originalText = submitBtn.textContent;
      
      try {
        submitBtn.textContent = 'Saving...';
        submitBtn.disabled = true;
        
        // Send data to server
        const url = isEdit ? `/api/promotions/${editId}` : '/api/promotions';
        const method = isEdit ? 'PUT' : 'POST';
        
        const response = await fetch(url, {
          method: method,
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(promotionData)
        });
        
        const result = await response.json();
        
        if (response.ok) {
          alert(isEdit ? 'Promotion updated successfully!' : 'Promotion created successfully!');
          closePromotionModal();
          // Clear edit ID
          delete this.dataset.editId;
          // Reload promotions list
          loadPromotions();
        } else {
          alert('Error: ' + (result.error || (isEdit ? 'Failed to update promotion' : 'Failed to create promotion')));
        }
      } catch (error) {
        console.error('Error submitting promotion:', error);
        alert('Network error. Please try again.');
      } finally {
        // Reset button state
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    });

    // Close modal when clicking outside
    document.getElementById('promotionModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closePromotionModal();
      }
    });

    // Load products for free item selection
    async function loadProducts() {
      try {
        const response = await fetch('/api/products');
        const data = await response.json();
        
        const productSelect = document.getElementById('selectedProduct');
        productSelect.innerHTML = '<option value="">Choose a product...</option>';
        
        if (response.ok && data.products) {
          data.products.forEach(product => {
            const option = document.createElement('option');
            option.value = product.id;
            option.textContent = product.product_name;
            option.dataset.price = product.price || 0;
            productSelect.appendChild(option);
          });
        } else {
          console.error('Error loading products:', data.error);
        }
      } catch (error) {
        console.error('Error fetching products:', error);
      }
    }

    // Update description for free item promotions
    function updateFreeItemDescription() {
      const selectedProduct = document.getElementById('selectedProduct');
      const pointsInput = document.getElementById('points');
      const descriptionField = document.getElementById('description');
      
      const selectedOption = selectedProduct.options[selectedProduct.selectedIndex];
      const points = pointsInput.value || '0';
      
      if (selectedOption && selectedOption.value && points) {
        const productName = selectedOption.textContent;
        descriptionField.value = `Get free ${productName} with ${points} points`;
      } else {
        descriptionField.value = '';
      }
    }

    // Load products for Buy X Get Y selection
    async function loadProductsForBuyXGetY() {
      try {
        const response = await fetch('/api/products');
        const data = await response.json();
        
        const buyProductSelect = document.getElementById('buyProduct');
        const getProductSelect = document.getElementById('getProduct');
        
        // Reset both dropdowns
        buyProductSelect.innerHTML = '<option value="">Choose product to buy...</option>';
        getProductSelect.innerHTML = '<option value="">Choose product to get...</option>';
        
        if (response.ok && data.products) {
          data.products.forEach(product => {
            // Add to buy product dropdown
            const buyOption = document.createElement('option');
            buyOption.value = product.id;
            buyOption.textContent = product.product_name;
            buyOption.dataset.price = product.price || 0;
            buyProductSelect.appendChild(buyOption);
            
            // Add to get product dropdown
            const getOption = document.createElement('option');
            getOption.value = product.id;
            getOption.textContent = product.product_name;
            getOption.dataset.price = product.price || 0;
            getProductSelect.appendChild(getOption);
          });
        } else {
          console.error('Error loading products for Buy X Get Y:', data.error);
        }
      } catch (error) {
        console.error('Error fetching products for Buy X Get Y:', error);
      }
    }

    // Update description for Buy X Get Y promotions
    function updateBuyXGetYDescription() {
      const buyQuantity = document.getElementById('buyQuantity').value;
      const getQuantity = document.getElementById('getQuantity').value;
      const buyProduct = document.getElementById('buyProduct');
      const getProduct = document.getElementById('getProduct');
      const pointsInput = document.getElementById('points');
      const descriptionField = document.getElementById('description');
      
      const buyProductName = buyProduct.options[buyProduct.selectedIndex]?.textContent || '';
      const getProductName = getProduct.options[getProduct.selectedIndex]?.textContent || '';
      const points = pointsInput.value || '0';
      
      if (buyQuantity && getQuantity && buyProduct.value && getProduct.value && points) {
        descriptionField.value = `Buy ${buyQuantity} ${buyProductName} and get ${getQuantity} ${getProductName} with ${points} points`;
      } else {
        descriptionField.value = '';
      }
    }

    // Load existing promotions
    async function loadPromotions() {
      try {
        const response = await fetch('/api/promotions');
        const data = await response.json();
        
        if (response.ok) {
          displayPromotions(data.promotions || []);
        } else {
          console.error('Error loading promotions:', data.error);
        }
      } catch (error) {
        console.error('Error fetching promotions:', error);
      }
    }
    
    // Display promotions in the grid
    function displayPromotions(promotions) {
      const grid = document.getElementById('promotionsGrid');
      
      if (promotions.length === 0) {
        grid.innerHTML = '<div style=\"text-align: center; padding: 40px; color: #6b7280;\">No promotions created yet. Click \"Add Promotion\" to get started!</div>';
        return;
      }
      
      grid.innerHTML = promotions.map(promo => `
        <div class=\"promotion-card\">
          <div class=\"promotion-header\">
            <h3>${promo.reward_name}</h3>
            <span class=\"status-badge status-${promo.is_active ? 'active' : 'inactive'}\">${promo.is_active ? 'active' : 'inactive'}</span>
          </div>
          <p class=\"promotion-description\">${promo.description}</p>
          <div class=\"promotion-details\">
            <div class=\"detail-item\">
              <strong>Points Required:</strong> ${promo.points_required}
            </div>
            <div class=\"detail-item\">
              <strong>Created:</strong> ${new Date(promo.created_at).toLocaleDateString()}
            </div>
            <div class=\"detail-item\">
              <strong>Status:</strong> ${promo.is_active ? 'Active' : 'Inactive'}
            </div>
          </div>
          <div class=\"promotion-actions\">
            <button onclick=\"editPromotion(${promo.reward_id})\" class=\"edit-btn\">Edit</button>
            <button onclick=\"deletePromotion(${promo.reward_id})\" class=\"delete-btn\">Delete</button>
          </div>
        </div>
      `).join('');
    }

    // Set default dates and load promotions on page load
    document.addEventListener('DOMContentLoaded', function() {
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('startDate').value = today;
      
      const nextMonth = new Date();
      nextMonth.setMonth(nextMonth.getMonth() + 1);
      document.getElementById('endDate').value = nextMonth.toISOString().split('T')[0];
      
      // Add event listener for points field to update descriptions
      document.getElementById('points').addEventListener('input', function() {
        const discountType = document.getElementById('discountType').value;
        if (discountType === 'free') {
          updateFreeItemDescription();
        } else if (discountType === 'buy_x_get_y') {
          updateBuyXGetYDescription();
        }
      });
      
      // Add event listeners for Buy X Get Y quantity fields
      document.getElementById('buyQuantity').addEventListener('input', function() {
        const discountType = document.getElementById('discountType').value;
        if (discountType === 'buy_x_get_y') {
          updateBuyXGetYDescription();
        }
      });
      
      document.getElementById('getQuantity').addEventListener('input', function() {
        const discountType = document.getElementById('discountType').value;
        if (discountType === 'buy_x_get_y') {
          updateBuyXGetYDescription();
        }
      });
      
      // Load existing promotions
      loadPromotions();
    });
  </script>
