    });

    // Load products for free item selection
    async function loadProducts() {
      try {
        // Get selected store from modal form
        const promoStoreSelect = document.getElementById('promoStoreSelect');
        const storeId = promoStoreSelect ? promoStoreSelect.value : '';
        
        // Build URL with store_id parameter if available
        const url = storeId ? `/api/products?store_id=${storeId}` : '/api/products';
        const response = await fetch(url);
        const data = await response.json();
        
        const productSelect = document.getElementById('selectedProduct');
        productSelect.innerHTML = '<option value="">Choose a product...</option>';
        
        if (response.ok && data.products) {
          data.products.forEach(product => {
            const option = document.createElement('option');
            option.value = product.id;
            option.textContent = product.product_name;
            option.dataset.price = product.price || 0;
            productSelect.appendChild(option);
          });
        } else {
          console.error('Error loading products:', data.error);
        }
      } catch (error) {
        console.error('Error fetching products:', error);
      }
    }

