      try {
        const response = await fetch('/api/owner/promotions');
        const data = await response.json();
        
        if (response.ok) {
          displayPromotions(data.promotions || []);
        } else {
          console.error('Error loading promotions:', data.error);
        }
      } catch (error) {
        console.error('Error fetching promotions:', error);
      }
    }
    
    // Display promotions in the grid
    function displayPromotions(promotions) {
      const grid = document.getElementById('promotionsGrid');
      
      if (promotions.length === 0) {
        grid.innerHTML = '<div style=\"text-align: center; padding: 40px; color: #6b7280;\">No promotions created yet. Click \"Add Promotion\" to get started!</div>';
        return;
      }
      
      grid.innerHTML = promotions.map(promo => {
        // Determine promotion status based on actual start/end dates
        const now = new Date();
        const createdDate = new Date(promo.created_at);
        
        let statusClass = 'inactive';
        let statusText = 'Inactive';
        
        // Use start/end dates if available
        if (promo.start_date && promo.end_date) {
          const startDate = new Date(promo.start_date);
          const endDate = new Date(promo.end_date);
          
          if (now < startDate) {
            statusClass = 'scheduled';
            statusText = 'Scheduled';
          } else if (now > endDate) {
            statusClass = 'expired';
            statusText = 'Expired';
          } else {
            statusClass = 'active';
            statusText = 'Active';
          }
        } else {
          // Fallback to is_active field
          if (promo.is_active) {
            statusClass = 'active';
            statusText = 'Active';
          }
        }
        
        return `
          <div class=\"promotion-card\">
            <div class=\"promotion-header\">
              <h3>${promo.reward_name}</h3>
              <span class=\"status-badge status-${statusClass}\">${statusText}</span>
            </div>
            ${promo.store_name ? `<div style=\"color: #6b7280; font-size: 13px; margin-bottom: 12px; display: flex; align-items: center; gap: 6px;\">
              <i class=\"fas fa-store\" style=\"font-size: 12px;\"></i>
              <span>${promo.store_name}</span>
            </div>` : ''}
            <p class=\"promotion-description\">${promo.description}</p>
            <div class=\"promotion-details\">
              ${promo.promotion_code ? `<div class=\"detail-item promotion-code-display\">
                <strong>üéüÔ∏è Code:</strong> 
                <span class=\"promo-code-value\">${promo.promotion_code}</span>
                <button class=\"copy-code-btn\" onclick=\"copyPromotionCode('${promo.promotion_code}', event)\" title=\"Copy code\">üìã</button>
              </div>` : ''}
              <div class=\"detail-item\">
                <strong>Points Required:</strong> ${promo.points_required}
              </div>
              ${promo.start_date ? `<div class=\"detail-item\">
                <strong>Start Date:</strong> ${new Date(promo.start_date).toLocaleDateString()}
              </div>` : ''}
              ${promo.end_date ? `<div class=\"detail-item\">
                <strong>End Date:</strong> ${new Date(promo.end_date).toLocaleDateString()}
              </div>` : ''}
              <div class=\"detail-item\">
                <strong>Status:</strong> ${statusText}
              </div>
            </div>
            <div class=\"promotion-actions\">
              <button onclick=\"editPromotion(${promo.reward_id})\" class=\"edit-btn\">Edit</button>
              <button onclick=\"deletePromotion(${promo.reward_id})\" class=\"delete-btn\">Delete</button>
            </div>
          </div>
        `;
      }).join('');
    }

