    function updateFreeItemDescription() {
      const selectedProduct = document.getElementById('selectedProduct');
      const pointsInput = document.getElementById('points');
      const descriptionField = document.getElementById('description');
      
      const selectedOption = selectedProduct.options[selectedProduct.selectedIndex];
      const points = pointsInput.value || '0';
      
      if (selectedOption && selectedOption.value && points) {
        const productName = selectedOption.textContent;
        descriptionField.value = `Get free ${productName} with ${points} points`;
      } else {
        descriptionField.value = '';
      }
    }

    // Load products for Buy X Get Y selection
    async function loadProductsForBuyXGetY() {
      try {
        // Get selected store from modal form
        const promoStoreSelect = document.getElementById('promoStoreSelect');
        const storeId = promoStoreSelect ? promoStoreSelect.value : '';
        
        // Build URL with store_id parameter if available
        const url = storeId ? `/api/products?store_id=${storeId}` : '/api/products';
        const response = await fetch(url);
        const data = await response.json();
        
        const buyProductSelect = document.getElementById('buyProduct');
        const getProductSelect = document.getElementById('getProduct');
        
