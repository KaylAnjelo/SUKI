<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transactions</title>
  <link rel="stylesheet" href="/css/AdminStyles.css">
  <link rel="stylesheet" href="/css/transactionReceipt.css">
  <script src="/js/notifications.js" defer></script>
  <script src="/js/logout.js" defer></script>
  <script src="/js/sidebar.js" defer></script>
  <script src="/js/transactions.js" defer></script>
  <link rel="icon" type="image/png" href="/assets/SUKI Logo 2.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <aside class="sidebar">
      <button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle sidebar"><i class="fas fa-bars"></i></button>
      <div class="logo">SUKI Incorporation</div>
      <nav class="nav">
        <a href="/admin-dashboard" class="nav-item">
          <i class="fas fa-chart-line"></i><span class="label">Dashboard</span>
        </a>
        <a href="/reports" class="nav-item">
          <i class="fas fa-file-alt"></i><span class="label">Reports</span>
        </a>
        <a href="/transac" class="nav-item active">
          <i class="fas fa-exchange-alt"></i><span class="label">Transactions</span>
        </a>
        <a href="/users/UserManagement" class="nav-item">
          <i class="fa-solid fa-fingerprint"></i><span class="label">Users</span>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="header">
        <div class="header-left">
          <h1>Transactions</h1>
        </div>
        <div class="header-right">
          <button id="notificationsBtn" class="notif-button"><i class="fas fa-bell"></i></button>
          <div id="notificationsDropdown" style="display: none;">
            <ul id="notificationsList"></ul>
          </div>
          <div class="user-profile">
            <div class="profile-pic">
              <i class="fas fa-user"></i>
            </div>
            <div class="profile-info">
              <span class="user-name">{{user.username}}</span>
            </div>
          </div>
          <form id="logoutForm" action="/logout" method="POST" style="display: inline;">
            <button type="submit" class="logout">Log out</button>
          </form>
        </div>
      </div>

      <!-- Filters -->
      <div class="filters-container" id="filtersContainer" style="background:#fafafa; border-radius:12px; padding:24px 16px; margin-bottom:18px; display:flex; flex-direction:column; align-items:center; gap:16px;">
        <div style="width:100%; display:flex; justify-content:center; align-items:center; gap:32px; flex-wrap:wrap;">
          <div style="display:flex; flex-direction:row; align-items:flex-end; gap:32px; width:100%; justify-content:center;">
            <div style="display:flex; flex-direction:column; align-items:flex-start; gap:6px;">
              <label for="typeFilterTrans" style="font-weight:500; font-size:13px;">Transaction Type:</label>
              <select id="typeFilterTrans" name="transactionType" style="padding:6px 12px; border-radius:6px; border:1px solid #ccc;">
                <option value="">All</option>
                <option value="Purchase">Purchase</option>
                <option value="Redemption">Redemption</option>
                <option value="Refund">Refund</option>
              </select>
            </div>
            <div style="display:flex; flex-direction:column; align-items:flex-start; gap:6px;">
              <label for="storeFilter" style="font-weight:500; font-size:13px;">Store:</label>
              <select id="storeFilter" name="storeFilter" style="padding:6px 12px; border-radius:6px; border:1px solid #ccc;">
                <option value="">All</option>
                {{#each stores}}
                  <option value="{{this.store_name}}">{{this.store_name}}</option>
                {{/each}}
              </select>
            </div>
            <div style="display:flex; flex-direction:column; align-items:center; gap:6px;">
              <label for="dateStart" style="font-weight:500; font-size:13px;">Date Range:</label>
              <div style="display:flex; align-items:center; gap:8px;">
                <input type="date" id="dateStart" name="dateStart" style="padding:6px 12px; border-radius:6px; border:1px solid #ccc;">
                <span style="font-weight:500; font-size:13px;">to</span>
                <input type="date" id="dateEnd" name="dateEnd" style="padding:6px 12px; border-radius:6px; border:1px solid #ccc;">
              </div>
            </div>
            <div style="display:flex; flex-direction:column; align-items:flex-start; gap:6px;">
              <label for="amountSort" style="font-weight:500; font-size:13px;">Amount:</label>
              <select id="amountSort" name="amountSort" style="padding:6px 12px; border-radius:6px; border:1px solid #ccc;">
                <option value="desc">Descending</option>
                <option value="asc">Ascending</option>
              </select>
            </div>
            <div style="display:flex; flex-direction:column; align-items:flex-end; gap:6px;">
              <label style="opacity:0; font-size:13px;">&nbsp;</label>
              <div style="display:flex; gap:8px;">
                <button id="applyFiltersBtn" class="apply-filters-btn" style="padding:7px 18px; border-radius:5px; border:none; background:#7D0006; color:white; font-weight:500; cursor:pointer; transition:all 0.3s ease;">Apply</button>
                <button id="clearFiltersBtn" class="clear-filters-btn" style="padding:7px 18px; border-radius:5px; border:none; background:#7D0006; color:white; font-weight:500; cursor:pointer; transition:all 0.3s ease;">Clear</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Transactions Table -->
      <div class="table-container">
        <div class="table-scroll">
          <table>
           <thead>
              <tr>
                <th data-column="reference_number" >Reference #</th>
                <th data-column="store_name" class="sortable">Store</th>
                <th data-column="amount" class="sortable">Amount</th>
                <th data-column="points" class="sortable">Points</th>
                <th data-column="transaction_type">Type</th>
                <th data-column="transaction_date" class="sortable">Date</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody id="transactionsBody"></tbody>
          </table>
        </div>
      </div>

     <!-- Receipt Modal -->
      <div id="detailsModal" class="receipt-modal" style="display:none;">
        <div class="receipt-content">
          <!-- Modal Header -->
          <div class="receipt-header">
            <div class="receipt-logo">
              <i class="fas fa-receipt"></i> SUKI Receipt
            </div>
            <span class="close" onclick="closeModal()">&times;</span>
          </div>

          <!-- Modal Body -->
          <div class="receipt-body">
          <!-- Title and Reference -->
          <div class="receipt-title">
            <h2>Transaction Details</h2>
            <div class="receipt-number" id="modalRef"></div>
            <div class="receipt-number">Type: <span id="modalType">N/A</span></div>
            <div class="receipt-number">Date: <span id="modalDate">N/A</span></div>
          </div>

          <!-- Info Section -->
          <div class="receipt-info">
            <div class="info-row">
              <span class="label">User:</span>
              <span class="value" id="modalUser"></span>
            </div>
            <div class="info-row">
              <span class="label">Store:</span>
              <span class="value" id="modalStore"></span>
            </div>
            <div class="info-row">
              <span class="label">Product:</span>
              <span class="value" id="modalProduct"></span>
            </div>
            <div class="info-row">
              <span class="label">Quantity:</span>
              <span class="value" id="modalQty"></span>
            </div>
            <div class="info-row">
              <span class="label">Price:</span>
              <span class="value" id="modalPrice"></span>
            </div>
            <div class="info-row">
              <span class="label">Transaction Type:</span>
              <span class="value" id="modalType"></span>
            </div>
            <div class="info-row">
              <span class="label">Date:</span>
              <span class="value" id="modalDate"></span>
            </div>
          </div>

          <!-- Summary Section -->
          <div class="receipt-summary">
            <div class="summary-row">
              <span class="label">Total Amount:</span>
              <span class="value amount" id="modalAmount"></span>
            </div>
            <div class="summary-row">
              <span class="label">Points:</span>
              <span class="value points" id="modalPoints"></span>
            </div>
          </div>

          <!-- Optional Footer -->
          <div class="receipt-footer">
            <p>Thank you for using SUKI!</p>
            <p class="footer-note">This is a system-generated receipt.</p>
          </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    // In your transactions.js (or the script that populates the modal):
    // When showing the receipt modal, calculate points from the total amount
    function showTransactionDetailsModal(transaction) {
      // ...existing code...
      // Calculate points from total amount
      const totalAmount = transaction.amount; // or sum of all subtotals if multiple
      const points = calculatePointsFromTotal(totalAmount); // Use your points logic here
      document.getElementById('modalAmount').textContent = totalAmount;
      document.getElementById('modalPoints').textContent = points;
      // ...existing code...
    }

    function calculatePointsFromTotal(amount) {
      // 10 percent of the total amount
      return Math.floor(amount * 0.10);
    }

    // Enhanced filter logic
    document.addEventListener('DOMContentLoaded', function() {
      const applyBtn = document.getElementById('applyFiltersBtn');
      if (applyBtn) {
        applyBtn.addEventListener('click', function() {
          let filtered = [...TXN_DATA];
          // Transaction type
          const typeVal = document.getElementById('typeFilterTrans').value;
          if (typeVal) {
            filtered = filtered.filter(tx => String(tx.transaction_type || '').toLowerCase() === typeVal.toLowerCase());
          }
          // Store
          const storeVal = document.getElementById('storeFilter').value;
          if (storeVal) {
            filtered = filtered.filter(tx => String(tx.store || '').toLowerCase() === storeVal.toLowerCase());
          }
          // Date range
          const dateStart = document.getElementById('dateStart').value;
          const dateEnd = document.getElementById('dateEnd').value;
          if (dateStart) {
            filtered = filtered.filter(tx => new Date(tx.transaction_date) >= new Date(dateStart));
          }
          if (dateEnd) {
            filtered = filtered.filter(tx => new Date(tx.transaction_date) <= new Date(dateEnd));
          }
          // Amount sort
          const amountSort = document.getElementById('amountSort').value;
          filtered = filtered.sort((a, b) => {
            const va = Number(a.total || 0);
            const vb = Number(b.total || 0);
            return amountSort === 'asc' ? va - vb : vb - va;
          });
          FILTERED_DATA = filtered;
          renderTransactions(FILTERED_DATA);
        });
      }
    });
  </script>
</body>
</html>
