<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Transactions | SUKI Incorporation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <script src="/js/sidebar.js" defer></script>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .sidebar {
      background-color: #7b1113;
      height: 100vh;
      padding: 1rem;
      color: white;
    }
    .sidebar.collapsed {
      width: 64px;
      padding: 1rem 0.5rem;
    }
    .sidebar .nav-link {
      color: white;
      font-weight: 500;
      margin-bottom: 1rem;
    }
    .sidebar .nav-link i { margin-right: 8px; }
    .sidebar.collapsed .nav-link .label { display: none; }
    .sidebar.collapsed .nav-link i { margin-right: 0; }
    .sidebar .nav-link.active {
      background-color: #5e0d0f;
      border-radius: 8px;
    }
    .header {
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 1rem;
      color: #7b1113;
    }
    .table thead {
      background-color: #f2f2f2;
    }
    .status-success {
      background-color: #d1e7dd;
      color: #0f5132;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 0.9rem;
    }
    .status-error {
      background-color: #f8d7da;
      color: #842029;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 0.9rem;
    }
    .table-hover tbody tr:hover {
      background-color: #f1f1f1;
    }
    .check-cell input[type="checkbox"] {
      transform: scale(1.3);
    }
    .logout {
      float: right;
      color: black;
      text-decoration: none;
    }
    .logout:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
      <button id="sidebarToggle" class="btn btn-outline-light btn-sm mb-3" aria-label="Toggle sidebar"><i class="fas fa-bars"></i></button>
      <h5 class="mb-4">SUKI <span class="label" style="font-weight: 300;">Incorporation</span></h5>
      <a href="/dashboard" class="nav-link"><i class="bi bi-speedometer2"></i> <span class="label">Dashboard</span></a>
      <a href="/reports" class="nav-link"><i class="bi bi-file-earmark-text"></i> <span class="label">Generate Reports</span></a>
      <a href="/transactions" class="nav-link active"><i class="bi bi-arrow-left-right"></i> <span class="label">Transactions</span></a>
      <a href="/users/Redemptions" class="nav-link"><i class="bi bi-coin"></i> <span class="label">Redemptions</span></a>
      <a href="/users/UserManagement" class="nav-link"><i class="bi bi-fingerprint"></i> <span class="label">Management</span></a>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 p-4">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="header">Transactions</div>
        <a href="/logout" class="logout">Log out</a>
      </div>

      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
          <thead>
            <tr>
              <th class="check-cell"><input type="checkbox" /></th>
              <th>Account Name</th>
              <th>Amount</th>
              <th>Accumulated Reward</th>
              <th>Transaction Date</th>
              <th>Status</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="check-cell"><input type="checkbox" /></td>
              <td>Agapito</td>
              <td>100</td>
              <td>10</td>
              <td>12-09-24</td>
              <td><span class="status-error">Error</span></td>
              <td><a href="#">View Details</a></td>
            </tr>
            <tr style="background-color: #e9f0ff;">
              <td class="check-cell"><input type="checkbox" checked /></td>
              <td>Jesicca</td>
              <td>85</td>
              <td>8.5</td>
              <td>12-09-24</td>
              <td><span class="status-success">Successful</span></td>
              <td><a href="#">View Details</a></td>
            </tr>
            <tr>
              <td class="check-cell"><input type="checkbox" /></td>
              <td>Jesicca</td>
              <td>150</td>
              <td>15</td>
              <td>12-09-23</td>
              <td><span class="status-success">Successful</span></td>
              <td><a href="#">View Details</a></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap Icons -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
</body>
</html>