<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transactions</title>
  <link rel="stylesheet" href="/css/AdminStyles.css">
  <link rel="stylesheet" href="/css/transactions.css">
  <script src="/js/notifications.js" defer></script>
  <script src="/js/logout.js" defer></script>
  <script src="/js/sidebar.js" defer></script>
  <script src="/js/transactions.js" defer></script>
  <link rel="icon" type="image/png" href="/assets/SUKI Logo 2.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="logo">SUKI Incorporation</div>
      <nav class="nav">
        <a href="/admin-dashboard" class="nav-item">
          <span class="label">Dashboard</span>
        </a>
        <a href="/reports" class="nav-item">
          <span class="label">Sales Report</span>
        </a>
        <a href="/transac" class="nav-item active">
          <span class="label">Transactions</span>
        </a>
        <a href="#" class="nav-item">
          <span class="label">Products</span>
        </a>
        <a href="#" class="nav-item">
          <span class="label">Promotions</span>
        </a>
        <a href="/users/UserManagement" class="nav-item">
          <span class="label">Users</span>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="header">
        <h1>Transactions</h1>
        <div class="notif-container">
          <button id="notificationsBtn" class="notif-button"><i class="fas fa-bell"></i></button>
          <div id="notificationsDropdown" style="display: none;">
            <ul id="notificationsList"></ul>
          </div>
          <form id="logoutForm" action="/logout" method="POST" style="display: inline;">
            <button type="submit" class="logout">Log out</button>
          </form>
        </div>
      </div>

      <!-- Filters -->
      <div class="filters-container" id="filtersContainer">
        <div class="filter-group">
          <label for="typeFilterTrans">Transaction Type:</label>
          <select id="typeFilterTrans" name="transactionType">
            <option value="">All</option>
            <option value="Purchase">Purchase</option>
            <option value="Redemption">Redemption</option>
            <option value="Refund">Refund</option>
          </select>
          <button class="apply-filters-btn">Apply Filters</button>
        </div>
      </div>

      <!-- Transactions Table -->
      <div class="table-container">
        <div class="table-scroll">
          <table>
           <thead>
              <tr>
                <th data-column="reference_number" >Reference #</th>
                <th data-column="store_name" class="sortable">Vendor Name</th>
                <th data-column="amount" class="sortable">Amount</th>
                <th data-column="points" class="sortable">Points</th>
                <th data-column="transaction_type">Type</th>
                <th data-column="transaction_date" class="sortable">Date</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody id="transactionsBody"></tbody>
          </table>
        </div>
      </div>

     <!-- Receipt Modal -->
      <div id="detailsModal" class="receipt-modal" style="display:none;">
        <div class="receipt-content">
          <!-- Modal Header -->
          <div class="receipt-header">
            <div class="receipt-logo">
              <i class="fas fa-receipt"></i> SUKI Receipt
            </div>
            <span class="close" onclick="closeModal()">&times;</span>
          </div>

          <!-- Modal Body -->
          <div class="receipt-body">
          <!-- Title and Reference -->
          <div class="receipt-title">
            <h2>Transaction Details</h2>
            <div class="receipt-number" id="modalRef"></div>
          </div>

          <!-- Info Section -->
          <div class="receipt-info">
            <div class="info-row">
              <span class="label">User:</span>
              <span class="value" id="modalUser"></span>
            </div>
            <div class="info-row">
              <span class="label">Store:</span>
              <span class="value" id="modalStore"></span>
            </div>
            <div class="info-row">
              <span class="label">Product:</span>
              <span class="value" id="modalProduct"></span>
            </div>
            <div class="info-row">
              <span class="label">Quantity:</span>
              <span class="value" id="modalQty"></span>
            </div>
            <div class="info-row">
              <span class="label">Price:</span>
              <span class="value" id="modalPrice"></span>
            </div>
            <div class="info-row">
              <span class="label">Transaction Type:</span>
              <span class="value" id="modalType"></span>
            </div>
            <div class="info-row">
              <span class="label">Date:</span>
              <span class="value" id="modalDate"></span>
            </div>
          </div>

          <!-- Summary Section -->
          <div class="receipt-summary">
            <div class="summary-row">
              <span class="label">Total Amount:</span>
              <span class="value amount" id="modalAmount"></span>
            </div>
            <div class="summary-row">
              <span class="label">Points:</span>
              <span class="value points" id="modalPoints"></span>
            </div>
          </div>

          <!-- Optional Footer -->
          <div class="receipt-footer">
            <p>Thank you for using SUKI!</p>
            <p class="footer-note">This is a system-generated receipt.</p>
          </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
